{
    "manifest_version": 3,
    "name": "DS DOM Counter",
    "version": "1.0",
    "description": "Compteur de DOM pour le Design System",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://design-system.docs.pole-emplo.intra/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://design-system.docs.pole-emplo.intra/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}