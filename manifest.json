{
    "manifest_version": 3,
    "name": "DS DOM Counter",
    "version": "1.0",
    "description": "Compteur de DOM pour le Design System",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://design-system.docs.pole-emploi.intra/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://design-system.docs.pole-emploi.infra/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}